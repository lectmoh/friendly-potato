{
  "manifest_version": 3,
  "name": "Custom Style",
  "version": "0.0.1",
  "icons": {
    "128": "assets/icon.png"
  },
  "action": {
    "default_icon": {
      "128": "assets/icon.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}